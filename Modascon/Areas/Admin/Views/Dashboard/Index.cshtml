<div class="page-content-wrapper">
    <!-- start page content-->
    <div class="page-content">

        <!--start breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Dashboard</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0 align-items-center">
                        <li class="breadcrumb-item">
                            <a href="javascript:;">
                                <ion-icon name="home-outline"></ion-icon>
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">eCommerce</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary">Settings</button>
                    <button type="button"
                            class="btn btn-outline-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                        <a class="dropdown-item"
                           href="javascript:;">Action</a>
                        <a class="dropdown-item" href="javascript:;">Another action</a>
                        <a class="dropdown-item" href="javascript:;">Something else here</a>
                        <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated link</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h6 class="card-subtitle mb-2">Ürünler</h6>
                            <h5 class="card-title">Ürün Sayısı</h5>
                            <h3 class="text-center display-3">
                                @await Component.InvokeAsync("ProductSummary")
                            </h3>
                            <a asp-controller="Product" asp-action="Index" class="card-link text-white">Tüm Ürünler</a>
                            <a asp-controller="Product" asp-action="Create" class="card-link text-white">Yeni Ürün Ekle</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card bg-danger text-white">
                        <div class="card-body text-center">
                            <h6 class="card-subtitle mb-2">Kategoriler</h6>
                            <h5 class="card-title">Kategori Sayısı</h5>
                            <h3 class="text-center display-3">
                                @await Component.InvokeAsync("CategorySummary")
                            </h3>
                            <a asp-controller="Category" asp-action="Index" class="card-link text-white">Tüm Kategoriler</a>
                            <a asp-controller="Category" asp-action="Create" class="card-link text-white">Yeni Kategori Ekle</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h4 class="card-subtitle mb-2"><ion-icon name="people-outline" role="img" class="md hydrated" aria-label="people outline"></ion-icon></h4>
                            <h5 class="card-title">Kullanıcı Sayısı</h5>
                            <h3 class="text-center display-3">
                                @await Component.InvokeAsync("UserSummary")
                            </h3>
                            <a asp-controller="User" asp-action="Index" class="card-link text-white">Tüm Kullanıcılar</a>
                            <a asp-controller="User" asp-action="Create" class="card-link text-white">Yeni Kullanıcı Ekle</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h4 class="card-subtitle mb-2"><ion-icon name="bag-handle-outline" role="img" class="md hydrated" aria-label="bag handle outline"></ion-icon></h4>
                            <h5 class="card-title">Devam Eden Siparişler</h5>
                            <h3 class="text-center display-3">
                                @await Component.InvokeAsync("OrderInProgress")
                            </h3>
                            <a asp-controller="Order" asp-action="Index" class="card-link text-white">Tüm Siparişler</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h6 class="card-subtitle mb-2">Roller</h6>
                            <h5 class="card-title">Rol Sayısı</h5>
                            <h3 class="text-center display-3">
                                @await Component.InvokeAsync("RoleSummary")
                            </h3>
                            <a asp-controller="Role" asp-action="Index" class="card-link text-white">Tüm Roller</a>
                            <a asp-controller="Role" asp-action="Create" class="card-link text-white">Yeni Rol Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-6 d-flex">
                <div class="card radius-10 w-100">
                    <div class="card-body">
                        @await Component.InvokeAsync("Showcase", new {page="list"})
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-6 d-flex">
                <div class="card radius-10 w-100">
                    <div class="card-body">
                        @await Component.InvokeAsync("ContactSummary")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

