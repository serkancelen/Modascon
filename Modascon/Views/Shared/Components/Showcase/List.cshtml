@model IEnumerable<Product>

<div class="mt-5 text-center border-bottom">
    <h6 class="display-6">Products</h6>
</div>

<div class="table-responsive mt-3">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Showcase</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prd in Model)
            {
                <tr>
                    <td><img class="border border-light rounded" src="@prd.ImageUrl" alt="@prd?.ProductName" width="50"></td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked="@prd.ShowCase" disabled>
                            <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
                        </div>
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@prd.Id" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
